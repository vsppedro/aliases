// Place your key bindings in this file to override the defaults
[
  {
    "key": "Ctrl+meta+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "!terminalFocus"
  },
  {
    "key": "Ctrl+meta+b",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "Ctrl+meta+f",
    "command": "workbench.action.tasks.runTask",
    "args": "launch tests for current file"
  },
  {
    "key": "Ctrl+meta+l",
    "command": "workbench.action.tasks.runTask",
    "args": "launch test for current line"
  },
  {
    "key": "Ctrl+meta+a",
    "command": "workbench.action.tasks.runTask",
    "args": "launch all tests"
  },
  {
    "key": "Ctrl+meta+c",
    "command": "workbench.action.tasks.runTask",
    "args": "launch console"
  },
  {
    "key": "Ctrl+meta+s",
    "command": "workbench.action.tasks.runTask",
    "args": "launch all system tests"
  },
  {
    "key": "Ctrl+meta+n",
    "command": "workbench.action.tasks.runTask",
    "args": "launch next failing test"
  },
  {
    "key": "Ctrl+meta+r",
    "command": "workbench.action.tasks.runTask",
    "args": "launch rubocop"
  },
  {
    "key": "Ctrl+meta+o",
    "command": "workbench.action.tasks.runTask",
    "args": "launch only failing tests"
  }
]
